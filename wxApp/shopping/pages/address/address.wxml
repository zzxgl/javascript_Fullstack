<!--pages/address/address.wxml-->
<view class="main">
  <view class="form-box">
  <form bindsubmit="formSubmit">
    <input placeholder="姓名" bindinput="bindName"></input>
    <input placeholder="电话号码" bindinput="bindPhone"></input>
    <input placeholder="详细地址" bindinput="bindDetail"></input>
    <button form-type="submit">保存</button>
  </form>
  </view>
</view>
